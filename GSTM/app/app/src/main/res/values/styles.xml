<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/day_disabled_text_color</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#08AE9E</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ButtonStyleMin" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#08AE9E</item>
        <item name="android:padding">1dp</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="ButtonAccept" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#4A86E8</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="ButtonCancel" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#FC3768</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>
